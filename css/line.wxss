[class*=border-]:before {
    content: " ";
    position: absolute;
    width: 200%;
    height: 200%;
    color: #e5e5e5;
    -webkit-transform-origin: 0 0;
    transform-origin: 0 0;
    -webkit-transform: scale(0.5);
    transform: scale(0.5);
    z-index: 2;
}
.border-none:before {
    border:none;
}
.border-b:before {
    left: 0;
    bottom: 0;
    right: 0;
    border-bottom: 1px solid #e5e5e5;
}
.border-t:before {
    left: 0;
    top: 0;
    right: 0;
    border-top: 1px solid #e5e5e5;
}
.border-l:before {
    left: 0;
    top: 0;
    bottom: 0;
    border-left: 1px solid #e5e5e5;
}
.border-r:before {
    right: 0;
    top: 0;
    bottom: 0;
    border-right: 1px solid #e5e5e5;
}
.border-tblr:before {
    height: auto;
    border: 1px solid #e5e5e5;
}